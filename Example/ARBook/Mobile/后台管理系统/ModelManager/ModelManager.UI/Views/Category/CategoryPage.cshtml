                                }
                            });
                        }
                        $searchResult.show();
                    } else {
                        $searchResult.hide();
                    }
                })
            ;
            $searchClear.on('click', function () {
                hideSearchResult();
                $searchInput.focus();
            });
            $searchCancel.on('click', function () {
                cancelSearch();
                $searchInput.blur();
            });



            $('#form').submit(function (obj) {

                // $.alert("测试");


                location.href = '@Url.Action("ShowModelList", "Model")' + '?name=' + encodeURIComponent($('#searchInput').val());

                obj.preventDefault();
            })





